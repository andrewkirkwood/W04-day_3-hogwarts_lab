<form action="/hogwarts/students/<%=@student.id%>" method="POST">

  <label for="first-name">First name:</label>
  <input type="text" value="<%= @student.first_name %>" name="first_name" id="first-name">

  <label for="last-name">Last name:</label>
  <input type="text" value="<%= @student.last_name %>" name="last_name" id="last-name">

  <label for="age">Age:</label>
  <input type="number" value="<%= @student.age %>" min="1" name="age" id="age">

  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">



    <% @houses.each do |house| %>
    <option value="<%=house.id%>"
      <%= "selected" if @student.house_id == house.id %>>
      <%= house.name %>
    </option>
    <% end %>





  </select>

  <input type="submit" value="Make new student">

</form>
